@using ProjectPrn211.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "~/Views/Shared/_DashLayout.cshtml";

	var bookings = ViewData["bookings"] as List<Booking>;

}
@if (bookings != null)
{

	<div class="card">
		@if (ViewData["ErrorMessage"] != null)
		{
			<div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
		}

		<div class="card-body">
			<div class="d-lg-flex align-items-center mb-4 gap-3">
				<div class="position-relative">
					<input type="text" class="form-control ps-5 radius-30" placeholder="Search Booking"> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
				</div>
				<div class="ms-auto"><a href="#" class="btn btn-primary radius-30 mt-2 mt-lg-0"><i class="bx bxs-plus-square"></i>Search</a></div>

			</div>


			<div class="table-responsive">
				<table class="table mb-0">
					<thead class="table-light">
						<tr>
							<th>BookingId</th>
							<th>RoomId</th>
							<th>Account</th>
							<th>InDate</th>
							<th>Confirmroom</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var booking in bookings)
						{
							if (booking.Confirmroom == false)
							{



								<tr>
									<td>
										@booking.BookingId
									</td>
									<td>@booking.RoomId</td>

									<td>@booking.Account</td>
									<td>@booking.InDate</td>
									<td>@booking.Confirmroom</td>

									<td>
										<a href="/Admin/confirmbooking/?Bookingid=@booking.BookingId" class="btn btn-primary btn-sm radius-30 px-4">Confirm</a>
										<a href="/Admin/deletebooking/?Bookingid=@booking.BookingId" class="btn btn-danger btn-sm radius-30 px-4">Delete</a>

									</td>

								</tr>
							}
						}

					</tbody>
				</table>


			</div>

		</div>
	</div>
}
else{
	<h1 style="color: red;"> Không có trường hợp nào cần giải quyết</h1>

}