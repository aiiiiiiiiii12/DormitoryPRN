@using ProjectPrn211.Models

@{
	Layout = "~/Views/Shared/_DashLayout.cshtml";
	var rooms = ViewData["Rooms"] as List<Room>;
	var admin = ViewData["Admin"] as Admin;
}
@if( rooms !=null){

	<div class="card">
		<div class="card-body">
			<div class="d-lg-flex align-items-center mb-4 gap-3">
				<div class="position-relative">
					<input type="text" class="form-control ps-5 radius-30" placeholder="Search Room"> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
				</div>
				<div class="ms-auto"><a href="#" class="btn btn-primary radius-30 mt-2 mt-lg-0"><i class="bx bxs-plus-square"></i>Search</a></div>

			</div>


			<div class="table-responsive">
				<table class="table mb-0">
					<thead class="table-light">
						<tr>
							<th>Roomid</th>
							<th>Roomname</th>
							<th>Building Name</th>
							<th>Max Member</th>
							<th>RoomImg</th>
							<th>Member</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var room in rooms)
						{
								

							<tr>
								<td>@room.Roomid</td>
								<td>
								@room.Roomname
								</td>
								<td>@room.Building.Buildingname</td>

								<td>@room.Rtype.Number</td>
								<td>@room.RoomImg</td>
								<td>@room.Member</td>

								<td>
									<a href="/Admin/DetailRoom/?Roomid=@room.Roomid" type="button" class="btn btn-primary btn-sm radius-30 px-4">Detail</a>
									<a href="/Admin/DeleteRoom/?Roomid=@room.Roomid" type="button" class="btn btn-secondary btn-sm radius-30 px-4">Delete</a>
								</td>
								
							</tr>
						}

					</tbody>
				</table>


			</div>

		</div>
	</div>
}
else{
	<h1 style="color: red;"> Access denined</h1>
}